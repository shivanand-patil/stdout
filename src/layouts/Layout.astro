---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "thoughts, logs, scripts" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <header>
        <h1 class="site-title">stdout.shivoncall.com</h1>
        <p class="site-subtitle">&gt; thoughts, logs, scripts</p>
        <nav>
          <a href="/">home</a>
          <a href="/posts">posts</a>
        </nav>
      </header>
      
      <main>
        <slot />
      </main>
      
      <footer>
        <p>&copy; 2025 Shivanand Patil. All output redirected to stdout.</p>
      </footer>
    </div>
  </body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Courier New', 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
    background-color: #0a0a0a;
    color: #00ff00;
    line-height: 1.6;
    overflow-x: hidden;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  header {
    margin-bottom: 3rem;
    border-bottom: 1px solid #00ff00;
    padding-bottom: 1rem;
  }

  .site-title {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 10px #00ff00;
  }

  .site-subtitle {
    font-size: 1.1rem;
    color: #00cc00;
    margin-bottom: 1rem;
  }

  nav {
    display: flex;
    gap: 2rem;
  }

  nav a {
    color: #00ff00;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border: 1px solid transparent;
    transition: all 0.3s ease;
  }

  nav a:hover {
    border-color: #00ff00;
    background-color: rgba(0, 255, 0, 0.1);
  }

  main {
    flex: 1;
    margin-bottom: 3rem;
  }

  h1, h2, h3, h4, h5, h6 {
    margin-bottom: 1rem;
    color: #00ff00;
  }

  h1 {
    font-size: 2rem;
  }

  h2 {
    font-size: 1.5rem;
  }

  p {
    margin-bottom: 1rem;
  }

  a {
    color: #00ccff;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  ul, ol {
    margin-bottom: 1rem;
    padding-left: 2rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  code {
    background-color: #1a1a1a;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-family: inherit;
  }

  pre {
    background-color: #1a1a1a;
    padding: 1rem;
    border-radius: 5px;
    overflow-x: auto;
    margin-bottom: 1rem;
    border: 1px solid #333;
  }

  pre code {
    background: none;
    padding: 0;
  }

  blockquote {
    border-left: 3px solid #00ff00;
    padding-left: 1rem;
    margin-bottom: 1rem;
    color: #00cc00;
  }

  footer {
    border-top: 1px solid #00ff00;
    padding-top: 1rem;
    text-align: center;
    color: #00cc00;
    font-size: 0.9rem;
  }

  .post-list {
    list-style: none;
    padding: 0;
  }

  .post-item {
    margin-bottom: 2rem;
    padding: 1rem;
    border: 1px solid #333;
    border-radius: 5px;
    transition: all 0.3s ease;
  }

  .post-item:hover {
    border-color: #00ff00;
    background-color: rgba(0, 255, 0, 0.05);
  }

  .post-title {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
  }

  .post-date {
    color: #00cc00;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .post-description {
    color: #cccccc;
  }

  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }
    
    .site-title {
      font-size: 1.5rem;
    }
    
    nav {
      flex-direction: column;
      gap: 1rem;
    }
    
    .post-item {
      padding: 0.8rem;
    }
  }
</style> 